{
  "name": "ping-hermano-electron",
  "version": "1.0.0",
  "description": "PingHermano - A simple Postman clone built with Electron",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "vite build",
    "dist": "npm run build && electron-builder",
    "start": "npm run build && electron .",
    "test": "vitest"
  },
  "build": {
    "appId": "com.pinghermano.app",
    "productName": "PingHermano",
    "publish": [
      "github"
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "src/preload/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juninmd/Ping-Hermano.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/juninmd/Ping-Hermano/issues"
  },
  "homepage": "https://github.com/juninmd/Ping-Hermano#readme",
  "dependencies": {
    "electron": "^40.0.0",
    "mobx": "^6.15.0",
    "mobx-react-lite": "^4.1.1",
    "postman-collection": "^5.2.0",
    "postman-runtime": "^7.51.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "styled-components": "^6.3.8"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@types/styled-components": "^5.1.36",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron-builder": "^26.4.0",
    "jsdom": "^27.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  }
}
